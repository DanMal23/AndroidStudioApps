<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context=".MainActivity">



    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="   hva er klokka" />

        <Button
            android:id="@+id/tableButton1"
            android:layout_width="69dp"
            android:layout_height="35dp"
            android:onClick="playTall"
            android:text="tall" />
    </LinearLayout>

    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="  måneder" />

        <Button
            android:id="@+id/tableButton"
            android:layout_width="136dp"
            android:layout_height="35dp"
            android:onClick="playMaanter"
            android:text="12 måneder" />
</LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="126dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="  ukedager" />

        <Button
            android:id="@id/tableButton1"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:onClick="playUkedager"
            android:text="7 dager" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="113dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="  daglige rutiner" />

        <Button
            android:id="@id/tableButton1"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:onClick="playRutiner"
            android:text="beskrivelse" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="121dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="  samtal om olje" />

        <Button
            android:id="@id/tableButton1"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:onClick="playOlje"
            android:text="lytt" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="27dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="178dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="  pause aller lytt igjen" />

        <Button
            android:id="@+id/button_pause"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignEnd="@+id/switch_looping"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="189dp"
            android:onClick="pauseMusic"
            android:text="pause"
            tools:layout_editor_absoluteX="139dp"
            tools:layout_editor_absoluteY="96dp" />

        <Switch
            android:id="@+id/switch_looping"
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="128dp"
            android:text="    loop" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="187dp"
        android:layout_weight="30"
        android:background="@drawable/tstigen"></RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="   verb og adverb" />

        <Button
            android:id="@id/tableButton1"
            android:layout_width="58dp"
            android:layout_height="35dp"
            android:onClick="onOpen1"
            android:text="1" />

        <Button
            android:id="@id/tableButton1"
            android:layout_width="58dp"
            android:layout_height="35dp"
            android:onClick="onOpen2"
            android:text="2" />

        <Button
            android:id="@id/tableButton1"
            android:layout_width="58dp"
            android:layout_height="35dp"
            android:onClick="onOpen3"
            android:text="3" />

        <Button
            android:id="@id/tableButton1"
            android:layout_width="58dp"
            android:layout_height="35dp"
            android:onClick="onOpen4"
            android:text="4" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="138dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="    Norges kart " />

        <Button
            android:id="@id/tableButton1"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:onClick="onOpen5"
            android:text="kart" />
    </LinearLayout>

</LinearLayout>